<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecipesDetailsActivity">

    <?xml version="1.0" encoding="utf-8"?>

    <TextView
        android:id="@+id/textView"
        android:layout_width="193dp"
        android:layout_height="51dp"
        android:background="@color/white"
        android:fontFamily="@font/amaranth_bold"
        android:text="Recipe name"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="405dp"
        android:layout_height="235dp"
        app:layout_constraintBottom_toBottomOf="@+id/ratingRecipes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/logo_app" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="84dp"
        android:layout_height="33dp"
        android:fontFamily="@font/amaranth"
        android:text="Tiempo de duracion: "
        app:layout_constraintEnd_toStartOf="@+id/ratingRecipes"
        app:layout_constraintHorizontal_bias="0.275"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="251dp" />

    <RatingBar
        android:id="@+id/ratingRecipes"
        android:layout_width="235dp"
        android:layout_height="52dp"
        android:layout_marginTop="176dp"
        android:background="@color/black"
        android:backgroundTint="@color/yellow"
        android:progressTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.898"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="409dp"
        android:layout_height="356dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="301dp">

        <!-- Contenedor principal lineal vertical -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">

            <!-- Reproductor de video -->

            <!-- Comentarios (puedes personalizar esto según tus necesidades) -->

            <!-- Lista de comentarios (puedes usar un RecyclerView o ListView) -->

            <TextView
                android:id="@+id/textView2"
                android:layout_width="102dp"
                android:layout_height="32dp"
                android:fontFamily="@font/amaranth"
                android:text="Recipe-Video" />

            <VideoView
                android:id="@+id/videoView"
                android:layout_width="wrap_content"
                android:layout_height="229dp"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:src="https://www.youtube.com/watch?v=xlB8o0HsYcQ" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amaranth"
                android:text="Ingredients" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewComments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp" />

            <TextView
                android:id="@+id/directions"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amaranth"
                android:text="Directions" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewComments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Button "Info Nutritional" anclado al extremo izquierdo -->

                <!-- ImageButton "Share" anclado al extremo derecho -->

                <Button
                    android:id="@+id/infonutritionalbutton"
                    android:layout_width="168dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="6dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="21dp"
                    android:layout_toStartOf="@+id/sharebutton"
                    android:fontFamily="@font/amaranth"
                    android:text="Info Nutritional" />

                <ImageButton
                    android:id="@+id/sharebutton"
                    android:layout_width="211dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginRight="3dp"
                    android:src="?attr/actionModeShareDrawable" />
            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amaranth"
                android:padding="16dp"
                android:text="Comentarios"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Título de "Comentarios" -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amaranth"
                android:padding="16dp"
                android:text="Comentarios"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Contenedor de comentarios existentes -->
            <LinearLayout
                android:id="@+id/commentsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp" />

            <!-- Campo de entrada para comentarios -->
            <EditText
                android:id="@+id/commentEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amaranth"
                android:hint="Escribe un comentario..."
                android:padding="16dp" />

            <!-- Botón para agregar comentarios -->
            <Button
                android:id="@+id/addCommentButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/amaranth"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Agregar Comentario" />


            <!-- Otros elementos que desees agregar -->

        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/view"
        android:layout_width="424dp"
        android:layout_height="66dp"
        android:background="#FFD8A9"
        tools:layout_editor_absoluteX="-7dp"
        tools:layout_editor_absoluteY="669dp" />

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="68dp"
        android:layout_height="58dp"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="?attr/homeAsUpIndicator" />


</androidx.constraintlayout.widget.ConstraintLayout>