<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <androidx.cardview.widget.CardView
        android:id="@+id/ola"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.687"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imatge"
            android:layout_width="500px"
            android:layout_height="500px"
            android:layout_margin="0dp"
            android:clipToOutline="true"
            tools:srcCompat="@drawable/test" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/totalreviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="5dp"
        android:text="1.600"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/valoracio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titul" />

    <TextView
        android:id="@+id/titul"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:text="KFC Inspo food"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="9sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/totalreviews"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ola" />

    <RatingBar
        android:id="@+id/valoracio"
        style="@android:style/Widget.Holo.Light.RatingBar.Small"
        android:layout_width="82dp"
        android:layout_height="18dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:max="5"
        android:numStars="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/totalreviews"
        app:layout_constraintTop_toBottomOf="@+id/titul" />

</androidx.constraintlayout.widget.ConstraintLayout>